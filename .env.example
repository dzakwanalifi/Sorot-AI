# Sorot.AI Environment Variables Template
# Copy this file to .env and fill in your real credentials

# Google Generative AI (Gemini 2.5 Flash-Lite)
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=YOUR_REAL_GEMINI_API_KEY_HERE

# AWS Configuration
# Create IAM user with Bedrock and Polly permissions
AWS_ACCESS_KEY_ID=YOUR_REAL_AWS_ACCESS_KEY_HERE
AWS_SECRET_ACCESS_KEY=YOUR_REAL_AWS_SECRET_KEY_HERE
AWS_REGION=us-east-1

# Application Configuration
NODE_ENV=development

# Frontend Configuration (for production deployment)
VITE_API_BASE_URL=https://your-api-gateway-id.execute-api.us-east-1.amazonaws.com/prod