{
  "name": "sorot-ai",
  "version": "0.1.0",
  "description": "AI-powered film curation platform for Indonesian film festival selectors",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:aws": "docker build -f aws/lambda/Dockerfile -t sorot-ai-lambda .",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:aws": "./aws/scripts/test-local.sh",
    "deploy:aws": "./aws/scripts/build-and-deploy.sh",
    "setup:aws": "./aws/scripts/setup-iam.sh",
    "cleanup:netlify": "./aws/scripts/cleanup-netlify.sh",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.525.0",
    "@aws-sdk/client-polly": "^3.525.0",
    "@aws-sdk/client-transcribe": "^3.525.0",
    "@google/genai": "^0.3.0",
    "@google/generative-ai": "^0.24.1",
    "@netlify/functions": "^4.2.7",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.0",
    "lucide-react": "^0.344.0",
    "react": "^19.0.0-rc.0",
    "react-dom": "^19.0.0-rc.0",
    "react-dropzone": "^14.2.3",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^3.4.1",
    "unpdf": "^1.3.2",
    "yt-dlp-exec": "^1.0.2",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^20.11.17",
    "@types/react": "^19.0.0-rc.0",
    "@types/react-dom": "^19.0.0-rc.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "autoprefixer": "^10.4.17",
    "dotenv": "^17.2.3",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.23",
    "globals": "^16.4.0",
    "postcss": "^8.4.33",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^5.1.0",
    "vitest": "^1.2.1"
  },
  "keywords": [
    "ai",
    "film-analysis",
    "react",
    "typescript",
    "aws-bedrock",
    "google-gemini"
  ],
  "author": "Dzakwan Alifi",
  "license": "MIT"
}
